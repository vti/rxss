#!/usr/bin/env perl

use strict;
use warnings;

use FindBin;
use lib "$FindBin::Bin/../lib";

use IO::Interactive qw(is_interactive);
use Getopt::Long;

use RXSS;

my $patterns = "$FindBin::Bin/../patterns/simple.txt";
my $verbose;
GetOptions(
    "patterns=s" => \$patterns,
    "verbose"    => \$verbose
) or die $!;

my $rxss = RXSS->new(patterns => $patterns, verbose => $verbose);

my @urls = is_interactive() ? @ARGV : map { chomp; $_ } <>;
$rxss->run(@urls);
